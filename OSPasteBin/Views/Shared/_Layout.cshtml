<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>

        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="ribbon">

                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Notes", "PasteNote")</li>
                            <li>@Html.ActionLink("New", "New", "PasteNote")</li>
                        </ul>
                    </nav>

                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>

                </div>
            </div>
        </header>
        <div id="body">
            <section class="main">
                @RenderBody()
            </section>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

    </body>
</html>
